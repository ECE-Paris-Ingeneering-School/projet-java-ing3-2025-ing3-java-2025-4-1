Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/maBase", "user", "password");
PreparedStatement ps = con.prepareStatement("SELECT * FROM users WHERE age > ?");
ps.setInt(1, 18);
ResultSet rs = ps.executeQuery();

while (rs.next()) {
    System.out.println(rs.getString("nom"));
}

rs.close();
ps.close();
con.close();
